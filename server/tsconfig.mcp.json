{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist-mcp",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2022"],
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/types": ["./types"],
      "@/storage/*": ["./storage/*"],
      "@/routes/*": ["./routes/*"],
      "@/mcp/*": ["./mcp/*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "include": ["src/mcp-standalone.ts"],
  "exclude": ["node_modules", "dist", "dist-mcp"]
}