{
  "name": "browser-relay",
  "version": "0.1.0",
  "description": "Chrome extension and HTTP/MCP server for relaying console logs locally",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run build:all && tsx watch src/index.ts",
    "build": "tsc",
    "build:mcp": "tsc --project tsconfig.mcp.json",
    "build:all": "npm run build && npm run build:mcp",
    "start": "npm run build:all && node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "console",
    "logging",
    "chrome-extension",
    "mcp",
    "developer-tools",
    "debugging",
    "relay",
    "local-development"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aotakeda/browser-relay.git"
  },
  "bugs": {
    "url": "https://github.com/aotakeda/browser-relay/issues"
  },
  "homepage": "https://github.com/aotakeda/browser-relay#readme",
  "author": "Arthur Takeda",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@colors/colors": "^1.6.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^4.18.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/colors": "^1.2.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-util": "^30.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
