# Browser Relay Configuration

# Server port (fixed at 27497 - not configurable)
# PORT=27497

# Enable MCP server mode for AI assistants
MCP_MODE=true

# Allowed domains for console log and network request capture (comma-separated)
# If not set, data will be captured from all websites
# Examples:
# ALLOWED_DOMAINS=localhost,example.com,myapp.local
# ALLOWED_DOMAINS=github.com,stackoverflow.com
ALLOWED_DOMAINS=

# Control what gets logged to server output for LLM visibility
# Set to 'false' to disable logging console messages to server logs (default: true)
# NOTE: You must restart the server after changing these values
LOG_CONSOLE_MESSAGES=true

# Set to 'false' to disable logging network requests to server logs (default: true) 
# NOTE: You must restart the server after changing these values
LOG_NETWORK_REQUESTS=true