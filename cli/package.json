{
  "name": "@local-lens/cli",
  "version": "0.1.0",
  "description": "Universal CLI tool to capture server logs from any backend framework",
  "main": "dist/index.js",
  "bin": {
    "local-lens": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": ["logging", "development", "debugging", "backend", "server"],
  "author": "Local Lens",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aotakeda/local-lens.git",
    "directory": "cli"
  },
  "bugs": {
    "url": "https://github.com/aotakeda/local-lens/issues"
  },
  "homepage": "https://github.com/aotakeda/local-lens#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "chalk": "^4.1.2",
    "cross-spawn": "^7.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/jest": "^29.5.10",
    "jest": "^29.7.0",
    "jest-util": "^30.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0"
  }
}